                    <li class="nav-item{{ app.request.get('_route') == 'logout' ? ' active' }}">
                        <a href="{{ path('logout') }}"><i class="fas fa-sign-out-alt"></i><span class="hide-sm">Изход</span></a>
                    </li>
                {% else %}
                    <li class="nav-item{{ app.request.get('_route') == 'app.login' ? ' active' }}">
                        <a href="{{ path('app.login') }}"><i class="fas fa-sign-in-alt"></i><span class="hide-sm">Вход</span></a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
