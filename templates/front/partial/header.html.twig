            <ul>
                {% if is_granted('ROLE_MANAGE') %}
                    <li class="nav-item{{ app.request.get('_route') == 'manage.index' ? ' active' }}">
                        <a href="{{ path('manage.index') }}"><i class="fas fa-user"></i><span class="hide-sm">Контролен панел</span></a>
                    </li>
                {% endif %}
