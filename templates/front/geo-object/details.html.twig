{% block content %}
    <div id="path-vote-suevey" class="survey d-flex flex-column align-items-center justify-content-start">
        <div class="survey-btn-close-holder position-fixed d-flex flex-column align-items-center justify-content-center">
            <button data-survey-close class="btn cursor-pointer survey-btn-close">
                <i class="fas fa-ellipsis-h"></i>
            </button>      
        </div>  
        <div id="carouselExampleControls" data-interval="0" data-ride="false" class="row container carousel slide carousel-vertical-stack h-100">
            <div class="carousel-inner m-4 mt-5 coll h-100">
                <div class="carousel-item h-100 active">
                    <div class="row">
                        <div class="col">
                            Попълнена анкета
                            <div class="survey-progress d-flex mb-2">
                                <div class="progress flex-grow-1">
                                    <div class="survey-progress-bar progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <div class="ml-3" data-toggle="tooltip" data-placement="top" title="Трябва да попълните анкетата, за да видите статистиката.">
                                    <a class="pt-2 survey-btn-poll btn btn-primary rounded-circle" href="#carouselExampleControls" role="button" data-slide="next">
                                        <i class="fas fa-poll"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-5">
                        <div class="col">
                            <h3>Обект: <strong class="geo-object-name">'geo_object.attributes.name'</strong></h3>
                            <h3>Тип: <strong class="geo-object-type">'geo_object.attributes.type'</strong></h4>
                        </div>
                    </div>

                    <form class="survey-form"></form>
                </div>
                <div class="carousel-item h-100">
                    <div class="col-lg-7">
                        <div class="d-flex justify-content-between mb-2">
                            <h3>Статистиката</h3>

                            <a class="pt-2 btn btn-primary rounded-circle" href="#carouselExampleControls" role="button" data-slide="prev">
                                <i class="fas fa-poll"></i>
                            </a>
                        </div>

                        <h4>Рейтинг</h4>

                        <div class="survey-ratings-rating"></div>

                        <h4 class="mt-4">Оценки от хората</h4>
                        <div class="survey-ratings-respondents"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
