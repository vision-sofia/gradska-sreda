{% block content %}
    <div id="path-vote-survey" data-toggle-type="side-panel" class="survey side-panel d-flex flex-column align-items-center justify-content-start">
        {% if app.user %}
            <div class="container side-panel-btn-close-holder position-fixed d-flex flex-column align-items-center justify-content-center">
                <button data-toggle-close data-toggle-for="path-vote-survey" id="toggle_button" class="btn cursor-pointer side-panel-btn-close" style="z-index: 1000;">
                    <i class="fas fa-ellipsis-h"></i>
                </button>
                <div class="side-panel-nav d-flex flex-md-column mt-0" style="left: 0">
                    <a data-slide-to="0" style="width: 36px;height: 36px;" class="active side-panel-nav-btn btn btn-primary rounded-0" href="#carousel-survey-pages" role="button" data-slide="next">
                        <i class="fas fa-poll fa-rotate-90"></i>
                    </a>
                    <div class="ml-2 ml-md-0 mt-md-2" data-toggle="tooltip" data-placement="top" title="Трябва да попълните анкетата, за да видите статистиката.">
                        <a data-slide-to="1" style="width: 36px;height: 36px;" class="side-panel-nav-btn btn btn-primary rounded-0" href="#carousel-survey-pages" role="button" data-slide="next">
                            <i class="fas fa-chart-pie"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div id="carousel-survey-pages" data-interval="0" data-ride="false" class="d-flex justify-content-center w-100 row pl-lg-4 carousel slide carousel-vertical-stack h-100">
                <div class="carousel-inner mt-4 mt-md-0 coll">
                    <div class="carousel-item px-lg-4 px-2 h-100 active">
                        <div class="border-bottom pt-2 " style="position: -webkit-sticky;position: sticky;top: 0;background-color: #FFF;z-index: 100;">
                            <div class="survey-progress d-flex mb-2 mt-3">
                                <div class="progress flex-grow-1" style="height: 5px" >
                                    <div class="survey-progress-bar progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div><span class="geo-object-name">'geo_object.attributes.name'</span></div>
                                <div><span class="geo-object-type">'geo_object.attributes.type'</span></div>
                            </div>
                        </div>
                        <div class="container pt-3">
                            <form class="survey-form"></form>
                            <div class="mb-4 text-center">
                                <button type="submit" id="confirm-button" class="btn btn-secondary rounded-0" disabled="disabled">Изпрати</button>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item p-4 h-100">
                        <div class="container">
                            <div class="d-flex justify-content-between mb-2">
                                <h3>Статистиката</h3>
                            </div>
                            <h4>Собствена оценка</h4>
                            <div class="survey-ratings-rating"></div>

                            <h4 class="mt-4">Средна оценка</h4>
                            <div class="survey-ratings-respondents"></div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="mt-5 mb-3">
                За да оцените отсечка е необходимо да влезете в системата
            </div>
            <a href="{{ path('app.login') }}" class="btn btn-primary">Вход</a>
        {% endif %}
    </div>
{% endblock %}
