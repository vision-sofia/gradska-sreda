{% extends 'front/geo-object/layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row mt-4">
            <div class="col-lg-5">
                <div class="mb-4">
                    <div id="mapMini" class="map-wide"></div>
                    <div class="confirm {% if app.debug %}confirm--debug{% endif %} d-none">
                        <div class="container py-4">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h5 class="font-weight-bold mb-3" data-confirm-title>Искате ли да оцените?</h5>
                                </div>
                                <div class="col-12 text-center">
                                    <a href="#" data-confirm-link class="btn btn-success mr-3 px-4">ДА</a>
                                    <span data-confirm-cancel class="btn btn-danger cursor-pointer px-4">НЕ</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <h5>Обект: <strong>{{ geoObject.attributes.name }}</strong></h5>
                        <h5 class="m-0">Тип: <strong>{{ geoObject.attributes.type }}</strong></h5>
                    </div>
                </div>

                <div id="surveyProgress" data-object-id="{{ geoObject.uuid }}" class="mt-3"></div>
            </div>

            <div class="col-lg-7">
                <div id="survey"></div>
            </div>
        </div>
    </div>
    <script>
        let mapOption = {
            survey: true,
            geoObject: '{{ geoObject.uuid }}'
        };

        let geoObject = '{{ geoObject.uuid }}'
    </script>
{% endblock %}
