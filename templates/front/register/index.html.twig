{% extends 'front/register/layout.html.twig' %}

{% block content %}
    <div class="section">
        <h1 class="title">Регистрация</h1>
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Потребителско име</label>
            <div class="col-sm-10">
                {{ form_widget(form.username, {'attr': {'placeholder': 'Потребителско име', 'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Парола</label>
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Парола', 'class': 'form-control input'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Повторете паролата</label>
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Повторете паролата', 'class': 'form-control input'}}) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Регистрирай ме</button>
        {{ form_end(form) }}

        <div class="text-center">
            Имаш регистрация? <a href="{{ path('app.login') }}">Влез</a>
        </div>
    </div>
{% endblock %}
