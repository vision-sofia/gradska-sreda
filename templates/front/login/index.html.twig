{% extends 'front/login/layout.html.twig' %}

{% block content %}
	<h1 class="title">Вход</h1>

	<form action="{{ path('app.login') }}" method="post">
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<div class="form-group row">
			<label class="col-sm-2 col-form-label">Потребителско име</label>
			<div class="col-sm-10">
				<input type="text" name="_username" class="form-control" placeholder="Потребителско име">
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 col-form-label">Парола</label>
			<div class="col-sm-10">
				<input type="password" name="_password" class="form-control" placeholder="Парола">
			</div>
		</div>
		<button type="submit" class="btn btn-primary">Влез</button>
	</form>
{% endblock %}
