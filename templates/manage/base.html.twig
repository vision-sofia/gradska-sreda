<script type="text/javascript">
    $(function () {
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        {% for v, flashMessage in app.session.flashbag.all %}
            {% for messagee in flashMessage %}
                {% set message = messagee|split('|') %}
                {% if v == 'success' %}
                    toastr.success('{% if message[0] is defined %}{{ message[0]|trans([], 'flash') }}{% else %}{% endif %}', '{% if message[1] is defined %}{{ message[1]|trans([], 'flash') }}{% else %}{% endif %}');
                {% endif %}
            {% endfor %}
        {% endfor %}

    })
</script>

