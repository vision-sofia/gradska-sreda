{% extends 'manage/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <strong>Оптимизиране на геометрия</strong>
                    <small>{{ 'form.edit'|trans }}</small>
                </div>
                {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
                <div class="card-body">
                    <div class="form-group row ">
                        <label class="col-md-3 col-form-label" for="password-input">Ключ</label>
                        <div class="col-md-9 form-control-plaintext">
                            {{ settings.key }}
                        </div>
                    </div>
                    <div class="form-group row ">
                        <label class="col-md-3 col-form-label" for="password-input">Тип</label>
                        <div class="col-md-9 form-control-plaintext">
                            {{ settings.type }}
                        </div>
                    </div>
                    <div class="form-group row ">
                        <label class="col-md-3 col-form-label" for="password-input">Стойност</label>
                        <div class="col-md-9 form-control-plaintext">
                            {{ form_widget(form.value, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row ">
                        <label class="col-md-3 col-form-label" for="password-input">Описание</label>
                        <div class="col-md-9 form-control-plaintext">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
                        <div>
                            <button class="btn btn-sm btn-primary" type="submit">
                                <i class="fa fa-dot-circle-o"></i> {{ 'button.save'|trans }}
                            </button>
                            <a class="btn btn-sm btn-danger" href="{{ path('manage.settings.list') }}">
                                <i class="fa fa-ban"></i> Откажи
                            </a>
                        </div>
                        <div>
                            {% if item is defined %}
                                <button class="btn btn-sm btn-danger" form="form{{ item.uuid }}" type="submit">
                                    <i class="fa fa-trash"></i>
                                </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}